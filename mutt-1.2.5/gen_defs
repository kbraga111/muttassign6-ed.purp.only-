#!/bin/sh

# $Id: gen_defs,v 2.0.6.1 2000/05/12 08:30:34 roessler Exp $

echo '/* Automatically generated by gen_defs.  Do not edit! */'
echo ''

for mode in help defs; do
	case $mode in
		help)
			echo "#ifdef HELP_C"
			echo "const char *HelpStrings[] = {"
			expr='s;^[^ ]* *\(.*\);	N_(\1),;'
			;;
		*)
			echo "enum {"
			expr='s;^\([^ ]*\).*;	\1,;'
			;;
	esac
	for i in $*; do
		sed -e '/^\/\*/d' -e "$expr" < $i
	done
	if test $mode = help; then
		echo '	NULL'
	else
		echo '	OP_MAX'
	fi
	echo "};"
	if test $mode = help; then
		echo "#endif /* MAIN_C */"
		echo ''
	fi
done

exit 0
